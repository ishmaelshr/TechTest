@model UserManagement.Web.Models.Users.UserViewModel

<h2>Delete User</h2>
    <a>Do you wish to delete the user: @Model.Forename @Model.Surname?</a>
        <form method="post" asp-action="DeleteUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" name="id" value="@Model.Id"/>
                <a asp-controller="Users" asp-action="List" class="btn btn-default">Cancel</a>
                <input type="submit" value="Delete" class="btn btn-primary float-end"/>
            </div>
        </form>   
</div>

