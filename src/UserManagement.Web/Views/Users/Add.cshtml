@model UserManagement.Web.Models.Users.UserViewModel

<h2>Add User</h2>
    <div class="add-user-form">
        <form asp-action="AddUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                    <label asp-for="Forename" class="control-label"></label>
                    <input type="text" asp-for="Forename" class="form-control"></>
                    <span asp-validation-for="Forename" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="Surname" class="control-label"></label>
                    <input type="text" asp-for="Surname" class="form-control"></>
                    <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input type="email" asp-for="Email" class="form-control"></>
                    <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="DateOfBirth" class="control-label">Date of Birth</label>
                    <input type="date" asp-for="DateOfBirth"/>
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="IsActive" class="control-label">Account Active</label>
                    <input type="checkbox" asp-for="IsActive" value="true"/>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary float-end"/>
                 <a asp-controller="Users" asp-action="List" class="btn btn-default">Back</a>
            </div>
        </form>
    </div>
</div>

